  tax_collected    Decimal @db.Decimal(12, 2) // Total tax collected
  tax_exempt_sales Decimal @db.Decimal(12, 2) // Sales without tax
  taxable_sales    Decimal @db.Decimal(14, 2) // Sales subject to tax

